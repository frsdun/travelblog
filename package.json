{
  "name": "travelblog",
  "description": "travelblog",
  "author": "frsdun",
  "homepage": "https://frsdun.github.io/travelblog/",
  "version": "1.0.0",
  "license": "MIT",
  "main": "docs/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frsdun/travelblog.git"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "marked": "^0.6.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "clean-css-cli": "^4.2.1"
  },
  "scripts": {
    "serve": "node ./node_modules/http-server/bin/http-server docs/",
    "build-html": "node build.js src/html/ docs/ src/html/_layout.html",
    "build-sass": "node ./node_modules/node-sass/bin/node-sass --include-path sass src/sass/plinth.sass docs/css/styles.css",
    "watch-sass": "nodemon --watch src -e scss,sass -x \"npm run build-sass && npm run minify\"",
    "watch-html": "nodemon --watch src -e html -x \"npm run build-html \"",
    "minify": "cleancss -o docs/css/styles.min.css docs/css/styles.css"
  }
}